CREATE DATABASE DBMedico;

USE DBMedico;


CREATE TABLE ESTADOS (ID_ESTADO INT NOT NULL PRIMARY KEY IDENTITY,
					  NOME_ESTADO VARCHAR(100),
					  SIGLA_ESTADO VARCHAR(2),
					  REGIAO VARCHAR(40)
);


