CREATE TABLE DEPARTAMENTO (ID_DEPARTAMENTO INT NOT NULL PRIMARY KEY IDENTITY,
							COD_DEPARTAMENTO VARCHAR(10),
							NOME_DEPARTAMENTO VARCHAR(100),
							INSERT_DATETIME DATE);


SELECT * FROM DEPARTAMENTO;


